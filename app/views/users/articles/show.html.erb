<h1><%= t("activerecord.attributes.article.article_detail") %></h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1 mx-auto">
		
    <table class="table", id="table-articles">
      <thead class="border-bottom border-2 border-dark">
        <tr>
          <th><%= Article.human_attribute_name :title %></th>
          <th><%= Article.human_attribute_name :content %></th>
          <th><%= Article.human_attribute_name :image %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @article.title %></td> 
          <td><%= @article.content %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center my-4">
		  <%= link_to t("activerecord.attributes.article.edit"), "#", class: "btn btn-primary" %>
		  <%= link_to t("activerecord.attributes.article.delete"), "#", class: "btn btn-danger" %>    
    </div>
        <div class="text-center my-4">
		  <%= link_to t("activerecord.attributes.article.back_to_article_index"), users_articles_path, class: "btn btn-primary" %>  
    </div>
  </div>
</div>
