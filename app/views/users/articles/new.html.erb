<h1>記事の新規作成</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 mx-auto">
    <%= form_with(model: @article, url: users_articles_path,method: :post, local: true) do |f| %>
      <%#= render partial: 'shared/error_messages', locals: { obj: @request } %>
    
      <%= f.label :title, class: "label-article" %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :content, class: "label-article" %>
      <%= f.text_area :content, rows: 2, class: "form-control" %>

      <%= f.label :image, class: "label-article" %><br>
      <%= f.file_field :image, id:"item-image", class:"hidden" %>			

			<%= f.submit t('.sign_up'), class: "btn btn-primary btn-user-devise" %>
    <% end %>
		<%= link_to "戻る", "#" %>
	</div>
</div>
