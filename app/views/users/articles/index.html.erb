<h1>記事一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "記事新規作成", "#", class: "btn btn-lg btn-primary pull-right mx-auto" %>
    <table class="table table-hover" id="table-articles">
      <thead>
        <tr>
          <th><%= Article.human_attribute_name :title %></th>
          <th><%= Article.human_attribute_name :content %></th>
          <th><%= Article.human_attribute_name :image %></th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td> 
          <td><%= article.content %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>